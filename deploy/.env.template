# RAG Suite Environment Configuration Template
# Copy this file to .env and customize as needed

# =============================================================================
# Elasticsearch Configuration
# =============================================================================
ELASTIC_PASSWORD=elastic123!
ES_JAVA_OPTS=-Xms2g -Xmx2g

# =============================================================================
# Hugging Face Configuration
# =============================================================================
# Get your token from: https://huggingface.co/settings/tokens
# Required for accessing gated models or higher rate limits
HF_TOKEN=

# =============================================================================
# LLM Service Configuration
# =============================================================================
# Available models:
# - microsoft/DialoGPT-medium (default, good for Polish/English)
# - microsoft/DialoGPT-large (larger, more capable but requires more memory)
# - facebook/blenderbot-400M-distill (conversational AI)
# - facebook/blenderbot-1B-distill (better quality, more memory)
LLM_MODEL_ID=microsoft/DialoGPT-medium

# Token limits for generation
MAX_TOTAL_TOKENS=4096
MAX_INPUT_LENGTH=3072

# =============================================================================
# API Configuration
# =============================================================================
ORCHESTRATOR_API_URL=http://localhost:7107
ELASTICSEARCH_URL=http://localhost:9200
EMBEDDING_SERVICE_URL=http://192.168.21.14:8580
LLM_SERVICE_URL=http://localhost:8581

# =============================================================================
# Security Configuration (Production)
# =============================================================================
# Generate strong passwords for production
GRAFANA_PASSWORD=admin123
REDIS_PASSWORD=

# JWT Secret for API authentication (generate with: openssl rand -base64 32)
JWT_SECRET=

# =============================================================================
# Performance Tuning
# =============================================================================
# Elasticsearch heap size (adjust based on available memory)
# Recommended: 50% of available RAM, max 32GB
ES_HEAP_SIZE=2g

# LLM Service memory limits
LLM_MAX_MEMORY=4g

# Embedding service concurrency
EMBEDDING_MAX_CONCURRENT_REQUESTS=512

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# =============================================================================
# Monitoring Configuration
# =============================================================================
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# Development Configuration
# =============================================================================
# Set to 'development' for dev mode, 'production' for prod
ENVIRONMENT=development

# Frontend development server
FRONTEND_URL=http://localhost:5173
FRONTEND_DEV_PORT=5173

# API development settings
API_DEV_PORT=7107
ENABLE_SWAGGER=true

# =============================================================================
# Database Configuration (if using external DB for sessions)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/rag_suite
# REDIS_URL=redis://localhost:6379

# =============================================================================
# External Services (Optional)
# =============================================================================
# If using external Elasticsearch cluster
# EXTERNAL_ELASTICSEARCH_URL=https://your-es-cluster.com:9200
# EXTERNAL_ELASTICSEARCH_USERNAME=elastic
# EXTERNAL_ELASTICSEARCH_PASSWORD=password

# If using Azure OpenAI or OpenAI API instead of local LLM
# OPENAI_API_KEY=sk-...
# OPENAI_API_BASE=https://api.openai.com/v1
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=...

# =============================================================================
# SSL/TLS Configuration (Production)
# =============================================================================
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key
# ENABLE_SSL=false
