# RAG Suite Local Development Environment Configuration
# Lightweight configuration for local development and testing

# =============================================================================
# Elasticsearch Configuration
# =============================================================================
ELASTIC_PASSWORD=local123
ES_JAVA_OPTS=-Xms512m -Xmx1g

# =============================================================================
# Hugging Face Configuration
# =============================================================================
# Not needed for local development
HF_TOKEN=

# =============================================================================
# LLM Service Configuration
# =============================================================================
# Using smaller model for faster startup and less memory
LLM_MODEL_ID=microsoft/DialoGPT-small
MAX_TOTAL_TOKENS=1024
MAX_INPUT_LENGTH=768

# =============================================================================
# API Configuration
# =============================================================================
ORCHESTRATOR_API_URL=http://localhost:7107
ELASTICSEARCH_URL=http://localhost:9200
EMBEDDING_SERVICE_URL=http://192.168.21.14:8580
LLM_SERVICE_URL=http://localhost:8581

# =============================================================================
# Security Configuration
# =============================================================================
GRAFANA_PASSWORD=local
REDIS_PASSWORD=
JWT_SECRET=local_dev_jwt_secret

# =============================================================================
# Performance Tuning (Local - Conservative)
# =============================================================================
# Elasticsearch: 1GB (minimal for local testing)
ES_HEAP_SIZE=1g

# LLM Service: 2GB (DialoGPT-small needs ~1GB)
LLM_MAX_MEMORY=2g

# Embedding service: low concurrency for local
EMBEDDING_MAX_CONCURRENT_REQUESTS=32

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=DEBUG
ENABLE_DEBUG_LOGGING=true

# =============================================================================
# Monitoring Configuration
# =============================================================================
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# Local Development Configuration
# =============================================================================
ENVIRONMENT=local
FRONTEND_URL=http://localhost:5173
FRONTEND_DEV_PORT=5173
API_DEV_PORT=7107
ENABLE_SWAGGER=true

# =============================================================================
# Local Database
# =============================================================================
# Using in-memory for local development
# DATABASE_URL=
# REDIS_URL=

# =============================================================================
# External Services
# =============================================================================
# Not using external services locally
# EXTERNAL_ELASTICSEARCH_URL=
# EXTERNAL_ELASTICSEARCH_USERNAME=
# EXTERNAL_ELASTICSEARCH_PASSWORD=

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
ENABLE_SSL=false
