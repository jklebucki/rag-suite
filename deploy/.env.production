# RAG Suite Production Environment Configuration
# This configuration is optimized for production with 16GB RAM

# =============================================================================
# Elasticsearch Configuration
# =============================================================================
ELASTIC_PASSWORD=prod_elastic_secure_2024_!@#$%
ES_JAVA_OPTS=-Xms4g -Xmx6g

# =============================================================================
# Hugging Face Configuration
# =============================================================================
# Add your HuggingFace token for production rate limits
HF_TOKEN=hf_your_production_token_here

# =============================================================================
# LLM Service Configuration
# =============================================================================
# Using DialoGPT-large for better quality in production
LLM_MODEL_ID=microsoft/DialoGPT-large
MAX_TOTAL_TOKENS=4096
MAX_INPUT_LENGTH=3072

# =============================================================================
# API Configuration
# =============================================================================
ORCHESTRATOR_API_URL=https://your-domain.com/api
ELASTICSEARCH_URL=http://localhost:9200
EMBEDDING_SERVICE_URL=http://localhost:8580
LLM_SERVICE_URL=http://localhost:8581

# =============================================================================
# Security Configuration (Production)
# =============================================================================
GRAFANA_PASSWORD=SecureGrafanaP@ssw0rd2024!
REDIS_PASSWORD=SecureRedisP@ssw0rd2024!
JWT_SECRET=prod_jwt_secret_generated_with_openssl_rand_base64_32

# =============================================================================
# Performance Tuning (Production - 16GB RAM)
# =============================================================================
# Elasticsearch: 6GB (aggressive for better search performance)
ES_HEAP_SIZE=6g

# LLM Service: 6GB (DialoGPT-large needs ~4-5GB)
LLM_MAX_MEMORY=6g

# Embedding service: high concurrency for production
EMBEDDING_MAX_CONCURRENT_REQUESTS=512

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# =============================================================================
# Monitoring Configuration
# =============================================================================
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# Production Configuration
# =============================================================================
ENVIRONMENT=production
FRONTEND_URL=https://your-domain.com
FRONTEND_DEV_PORT=5173
API_DEV_PORT=7107
ENABLE_SWAGGER=false

# =============================================================================
# Production Database
# =============================================================================
DATABASE_URL=postgresql://rag_user:secure_db_password@localhost:5432/rag_suite_prod
REDIS_URL=redis://:SecureRedisP@ssw0rd2024!@localhost:6379

# =============================================================================
# External Services (Production)
# =============================================================================
# If using managed Elasticsearch
# EXTERNAL_ELASTICSEARCH_URL=https://your-es-cluster.com:9200
# EXTERNAL_ELASTICSEARCH_USERNAME=elastic
# EXTERNAL_ELASTICSEARCH_PASSWORD=your_elastic_password

# Azure OpenAI for enterprise (optional)
# OPENAI_API_KEY=sk-your-openai-key
# OPENAI_API_BASE=https://api.openai.com/v1
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-azure-openai-key

# =============================================================================
# SSL/TLS Configuration (Production)
# =============================================================================
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/rag-suite.crt
SSL_KEY_PATH=/etc/ssl/private/rag-suite.key
