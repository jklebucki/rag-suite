# RAG Suite Development Environment Configuration
# This configuration is optimized for development with 16GB RAM

# =============================================================================
# Elasticsearch Configuration
# =============================================================================
ELASTIC_PASSWORD=dev_elastic_2024!
ES_JAVA_OPTS=-Xms1g -Xmx2g

# =============================================================================
# Hugging Face Configuration
# =============================================================================
# Optional for development - leave empty for public models
HF_TOKEN=

# =============================================================================
# LLM Service Configuration
# =============================================================================
# Using DialoGPT-medium - good balance for development
LLM_MODEL_ID=microsoft/DialoGPT-medium
MAX_TOTAL_TOKENS=2048
MAX_INPUT_LENGTH=1536

# =============================================================================
# API Configuration
# =============================================================================
ORCHESTRATOR_API_URL=http://localhost:7107
ELASTICSEARCH_URL=http://localhost:9200
EMBEDDING_SERVICE_URL=http://192.168.21.14:8580
LLM_SERVICE_URL=http://localhost:8581

# =============================================================================
# Security Configuration
# =============================================================================
GRAFANA_PASSWORD=dev123
REDIS_PASSWORD=
JWT_SECRET=dev_jwt_secret_key_not_for_production_use_only

# =============================================================================
# Performance Tuning (Development - 16GB RAM)
# =============================================================================
# Elasticsearch: 2GB (conservative for dev)
ES_HEAP_SIZE=2g

# LLM Service: 4GB (DialoGPT-medium needs ~2-3GB)
LLM_MAX_MEMORY=4g

# Embedding service: moderate concurrency for dev
EMBEDDING_MAX_CONCURRENT_REQUESTS=128

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=DEBUG
ENABLE_DEBUG_LOGGING=true

# =============================================================================
# Monitoring Configuration
# =============================================================================
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# Development Configuration
# =============================================================================
ENVIRONMENT=development
FRONTEND_URL=http://localhost:5173
FRONTEND_DEV_PORT=5173
API_DEV_PORT=7107
ENABLE_SWAGGER=true

# =============================================================================
# Development Database (Optional)
# =============================================================================
# Using in-memory storage for development
# DATABASE_URL=
# REDIS_URL=redis://localhost:6379

# =============================================================================
# External Services (Development)
# =============================================================================
# Not using external services in development
# EXTERNAL_ELASTICSEARCH_URL=
# EXTERNAL_ELASTICSEARCH_USERNAME=
# EXTERNAL_ELASTICSEARCH_PASSWORD=

# Azure OpenAI fallback (optional for testing)
# OPENAI_API_KEY=
# OPENAI_API_BASE=https://api.openai.com/v1
# AZURE_OPENAI_ENDPOINT=
# AZURE_OPENAI_API_KEY=

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
ENABLE_SSL=false
