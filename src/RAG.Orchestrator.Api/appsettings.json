    "DefaultLanguage": "en",
    "SupportedLanguages": ["pl", "en", "ro", "hu", "nl"],
    "EnableTranslation": true,
    "EnableLanguageDetection": true,
    "TranslationCacheExpirationMinutes": 60,
    "MinimumConfidenceThreshold": 0.7,
    "TranslationProvider": "Azure",
    "AzureTranslator": {
      "SubscriptionKey": "",
      "Region": "",
      "Endpoint": "https://api.cognitive.microsofttranslator.com",
      "ApiVersion": "3.0",
      "UseKeyVault": false,
      "KeyVaultSecretName": ""
    }
  }
