{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "HttpsRedirection": {
    "HttpsPort": 7108
  },
  "Services": {
    "Elasticsearch": {
      "Url": "http://localhost:9200",
      "Username": "elastic",
      "Password": "changeme",
      "TimeoutMinutes": 10
    },
    "EmbeddingService": {
      "Url": "http://localhost:8580"
    },
    "LlmService": {
      "Url": "http://localhost:11434",
      "MaxTokens": 300,
      "Temperature": 0.7,
      "Model": "llama3.1:8b",
      "IsOllama": true,
      "TimeoutMinutes": 10
    }
  },
  "Chat": {
    "MaxMessageLength": 2000,
